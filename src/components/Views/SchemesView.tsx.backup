        {/* Footer */}
        <div className="border-t border-gray-200 p-4 bg-gray-50 flex justify-end space-x-3">
          <button
            onClick={onClose}
            className="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  );
}

// Citizen Feedback Modal Component
function CitizenFeedbackModal({ scheme, onClose }: { scheme: Scheme; onClose: () => void }) {
  const [rating, setRating] = useState(0);
  const [comment, setComment] = useState('');
  const [escalate, setEscalate] = useState(false);
  const [submitted, setSubmitted] = useState(false);

  const handleSubmit = () => {
    const feedback = {
      schemeId: scheme.id,
      rating,
      comment,
      escalated: escalate,
      timestamp: new Date().toISOString(),
      anonymous: true
    };
    console.log('Anonymous feedback submitted:', feedback);
    setSubmitted(true);
    setTimeout(() => onClose(), 2000);
  };

  if (submitted) {
    return (
      <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div className="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full text-center">
          <div className="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <CheckCircle size={32} className="text-green-600" />
          </div>
          <h3 className="text-2xl font-bold text-gray-900 mb-2">Thank You!</h3>
          <p className="text-gray-600">Your anonymous feedback has been submitted successfully.</p>
          {escalate && (
            <p className="text-sm text-orange-600 mt-2">‚ö†Ô∏è Your issue will be escalated to authorities</p>
          )}
        </div>
      </div>
    );
  }

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
      <div className="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden">
        {/* Header */}
        <div className="bg-gradient-to-r from-green-500 to-teal-600 p-6 text-white">
          <div className="flex items-start justify-between mb-4">
            <div>
              <h2 className="text-2xl font-bold mb-2">Submit Anonymous Feedback</h2>
              <p className="text-sm opacity-90">Your identity will remain completely confidential</p>
            </div>
            <button 
              onClick={onClose}
              className="p-2 hover:bg-white hover:bg-opacity-20 rounded-lg transition-colors"
            >
              <X size={24} />
            </button>
          </div>
          <div className="bg-white bg-opacity-20 rounded-lg p-3">
            <div className="text-xs opacity-90 mb-1">Project</div>
            <div className="font-bold">{scheme.name}</div>
          </div>
        </div>

        {/* Content */}
        <div className="p-6 space-y-6">
          {/* Privacy Notice */}
          <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div className="flex items-start space-x-3">
              <div className="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <Users size={16} className="text-blue-600" />
              </div>
              <div className="text-sm text-blue-900">
                <p className="font-medium mb-1">100% Anonymous</p>
                <p className="text-blue-700">No personal information is collected. Your feedback helps improve public services.</p>
              </div>
            </div>
          </div>

          {/* Rating */}
          <div>
            <label className="block text-sm font-bold text-gray-900 mb-3">
              How would you rate this project? *
            </label>
            <div className="flex items-center space-x-2">
              {[1, 2, 3, 4, 5].map((star) => (
                <button
                  key={star}
                  onClick={() => setRating(star)}
                  className="group transition-transform hover:scale-110"
                >
                  <Star 
                    size={40} 
                    className={`${
                      star <= rating 
                        ? 'fill-yellow-400 text-yellow-400' 
                        : 'text-gray-300 hover:text-yellow-300'
                    } transition-colors`}
                  />
                </button>
              ))}
              {rating > 0 && (
                <span className="ml-4 text-sm font-medium text-gray-700">
                  {rating === 1 ? 'Poor' : rating === 2 ? 'Below Average' : rating === 3 ? 'Average' : rating === 4 ? 'Good' : 'Excellent'}
                </span>
              )}
            </div>
          </div>

          {/* Comment */}
          <div>
            <label className="block text-sm font-bold text-gray-900 mb-2">
              Your Feedback (Optional)
            </label>
            <textarea
              value={comment}
              onChange={(e) => setComment(e.target.value)}
              placeholder="Share your experience about this project... (completely anonymous)"
              rows={4}
              className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 resize-none"
            />
            <div className="text-xs text-gray-500 mt-1">{comment.length} / 500 characters</div>
          </div>

          {/* Escalation Option */}
          <div className="bg-orange-50 border border-orange-200 rounded-lg p-4">
            <label className="flex items-start space-x-3 cursor-pointer">
              <input
                type="checkbox"
                checked={escalate}
                onChange={(e) => setEscalate(e.target.checked)}
                className="mt-1 w-5 h-5 text-orange-600 rounded focus:ring-orange-500"
              />
              <div className="text-sm">
                <div className="font-bold text-orange-900 flex items-center space-x-2 mb-1">
                  <Flag size={14} />
                  <span>Escalate this issue to district authorities</span>
                </div>
                <p className="text-orange-700">
                  Check this if you believe there are serious issues requiring immediate official attention.
                </p>
              </div>
            </label>
          </div>
        </div>

        {/* Footer */}
        <div className="border-t border-gray-200 p-4 bg-gray-50 flex justify-between items-center">
          <div className="flex items-center space-x-2 text-sm text-gray-600">
            <ThumbsUp size={16} />
            <span>{scheme.feedbackCount} citizens have provided feedback</span>
          </div>
          <div className="flex space-x-3">
            <button
              onClick={onClose}
              className="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors"
            >
              Cancel
            </button>
            <button
              onClick={handleSubmit}
              disabled={rating === 0}
              className="px-6 py-2 bg-gradient-to-r from-green-500 to-teal-600 text-white rounded-lg font-medium hover:from-green-600 hover:to-teal-700 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center space-x-2"
            >
              <Send size={16} />
              <span>Submit Anonymously</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  );
}

// Add Scheme Modal Component (For Panchayat Admins)
function AddSchemeModal({ onClose, onSubmit }: { onClose: () => void; onSubmit: (scheme: any) => void }) {
  const [formData, setFormData] = useState({
    name: '',
    category: 'sanitation',
    village: 'Shirdi',
    district: 'Ahmednagar',
    totalBudget: '',
    startDate: '',
    endDate: '',
    description: ''
  });

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    const newScheme = {
      ...formData,
      id: `SCH-${Date.now()}`,
      totalBudget: parseInt(formData.totalBudget),
      budgetUtilized: 0,
      overallProgress: 0,
      status: 'on-track',
      phases: [],
      vendorReports: [],
      discrepancies: [],
      citizenRating: 0,
      feedbackCount: 0,
      lastUpdated: new Date().toISOString()
    };
    onSubmit(newScheme);
  };

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
      <div className="bg-white rounded-2xl shadow-2xl max-w-3xl w-full max-h-[90vh] overflow-hidden">
